<!--! admin_home -->
<div metal:use-macro="view.layout">
  <div metal:fill-slot="content" class="main-content">
    <div class="edit-wrapper">



      <div class="row-fluid">
        <div class="well">
          <div id="message" class="message-block alert-info"
            tal:condition="request.session.peek_flash()">
            <p tal:define="message request.session.pop_flash()">
              ${message}
            </p>
          </div>

          <h1><tal:if tal:condition="title | nothing">${title} - </tal:if>
              <span class="resp-value">${data.givenName}
              <tal:x tal:condition="data.middleName">
                  ${data.middleName}
              </tal:x>
              ${data.sn}
              <tal:x tal:condition="data.suffix">
                  ${data.suffix}
              </tal:x>
              </span>
          </h1>

            <p><b>Submitted:</b> <span class="resp-reported-value">${data.subTimestamp}</span></p>

        </div>
      </div>


      <form action="${form.action}" method="POST" id="${form.formid}"
          accept-charset="utf-8" class="deform">

        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <fieldset class="contact-info">
              <legend>Contact and Mailing Address Information</legend>

              <p><b>Name:</b>
              <span class="resp-value">${data.givenName}
              <tal:x tal:condition="data.middleName">
                  ${data.middleName}
              </tal:x>
              ${data.sn}
              <tal:x tal:condition="data.suffix">
                  ${data.suffix}
              </tal:x>
              </span>
              </p>

              <p><b>Preferred name:</b> <span class="resp-value">${data.cn}</span></p>

              <h4>Mailing address:</h4>
              <address>
                <span class="resp-value">
                ${data.givenName}
                <tal:x tal:condition="data.middleName">
                    ${data.middleName}
                </tal:x>
                ${data.sn}
                <tal:x tal:condition="data.suffix">
                    ${data.suffix}
                </tal:x>
                <br />
                ${data.street} <br />
                ${data.lcity},
                ${data.st} ${data.postalCode} <br />
                ${data.country}
                </span>
              </address>
              <h4>Contact addrs:</h4>
              <address>
                email: <span class="resp-value">${data.mail}</span> <br />
                Phone: <span class="resp-value">${data.phone}</span><br />
                Cell phone: <span class="resp-value">${data.cell}</span><br />
              </address>

            </fieldset>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-6">

            <fieldset class="employ">
              <legend>Employment/Institution Information</legend>

              <div  tal:define="field form['employerType'];">
                <b>${field.title}:</b>
                <div class="resp-reported-value">${structure:field.serialize()}</div>
              </div>
              <div tal:define="field form['employerName'];">
                <b>${field.title}:</b>
                <div class="resp-reported-value">${structure:field.serialize()}</div>
              </div>
            </fieldset>

            <fieldset class="citizen-data">
              <legend>Citizenship Status</legend>

              <div tal:define="field form['citizenStatus'];">
                <b>${field.title}:</b>
                <div class="resp-reported-value">${structure:field.serialize()}</div>
              </div>


              <div tal:define="field form['birthCountry'];">
                <b>${field.title}:</b>
                <div class="resp-reported-value">${structure:field.serialize()}</div>
              </div>


            </fieldset>
          </div>

        </div>

        <div class="row">
          <div class="col-md-6">

            <fieldset id="existing-account-edit">
              <legend>UserID Info</legend>

              <div class="form-group"
                  tal:condition="data.nrelUserID">
                <p><b>nrelUserID</b>
                  <span class="resp-reported-value">${data.nrelUSerID}</span></p>
              </div>

              <div class="form-group" tal:condition="data.preferredUID">
                <p><b>preferredUID:</b>
                  <span class="resp-reported-value">${data.preferredUID}</span>
                </p>
              </div>

              <div class="form-group"
                  tal:condition="data.justification">
                <p><b>Justification:</b>
                <span class="resp-reported-value">${data.justification}</span>
              </div>

            </fieldset>

            <fieldset id="user-comments">
              <div class="form-group">
                <h5>Additional Comments</h5>
                <p class="resp-reported-value">${data.comments}</p>
              </div>

            </fieldset>
          </div>

          <div class="col-md-6">
            <legend>Review Updates</legend>

            <fieldset id="UserID">
              <div class="form-group" tal:define="field form['UserID'];">
                <h5>${field.title}</h5>
                <p class="resp-reported-value">${structure:field.serialize()}</p>
                <span class="help" tal:condition="field.description">${field.description}</span>
              </div>
            </fieldset>

            <fieldset id="UserID">
              <div class="form-group" tal:define="field form['approvalStatus'];">
                <h5>${field.title}</h5>
                <p class="help" tal:condition="field.description">${field.description}</p>
                <div class="resp-reported-value">${structure:field.serialize()}</div>
              </div>
            </fieldset>


            <div class="row reg-form-submit-section">

              <hr/>

              <div class="col-md-5">
                <input class="btn btn-primary"
                       id="request_account_submit" name="submit" type="submit"
                       value="Update"/>
              </div>

              <div class="col-md-3">
                <a href="./" class="btn btn-default" role="button">Cancel</a>
              </div>

            </div>


          </div>

        </div>


        ${structure:form['unid'].serialize()}
        ${structure:form['givenName'].serialize()}
        ${structure:form['middleName'].serialize()}
        ${structure:form['sn'].serialize()}
        ${structure:form['suffix'].serialize()}
        ${structure:form['cn'].serialize()}
        ${structure:form['street'].serialize()}
        ${structure:form['lcity'].serialize()}
        ${structure:form['st'].serialize()}
        ${structure:form['postalCode'].serialize()}
        ${structure:form['country'].serialize()}
        ${structure:form['mail'].serialize()}
        ${structure:form['phone'].serialize()}
        ${structure:form['cell'].serialize()}
        ${structure:form['employerType'].serialize()}
        ${structure:form['employerName'].serialize()}
        ${structure:form['citizenStatus'].serialize()}
        ${structure:form['citizenships'].serialize()}
        ${structure:form['birthCountry'].serialize()}
        ${structure:form['nrelUserID'].serialize()}
        ${structure:form['preferredUID'].serialize()}
        ${structure:form['justification'].serialize()}
        ${structure:form['comments'].serialize()}
        <!--!${structure:form['approvalStatus'].serialize()}-->
        <!--!${structure:form['UserID'].serialize()}-->
        ${structure:form['subTimestamp'].serialize()}
        ${structure:form['couTimestamp'].serialize()}
        ${structure:form['storTimestamp'].serialize()}


      </form>




    </div>
  </div>
</div>

