<!--! admin_home -->
<div metal:use-macro="view.layout">
  <div metal:fill-slot="content" class="main-content">
    <div class="edit-wrapper">



      <div class="row-fluid">
        <div class="well">

          <tal:if tal:condition="title | nothing"><h1>${title}</h1></tal:if>
            <p><b>Submitted:</b> <span class="resp-reported-value">${data.subTimestamp}</span></p>
            <p>
              <span class="resp-value">${data.givenName}
              <tal:x tal:condition="data.middleName">
                  ${data.middleName}
              </tal:x>
              ${data.sn}
              <tal:x tal:condition="data.suffix">
                  ${data.suffix}
              </tal:x>
              </span>
            </p>



        </div>
      </div>


      <form action="${form.action}" method="POST" id="${form.formid}"
          accept-charset="utf-8" class="deform">

        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <fieldset class="contact-info">
              <legend>Contact and Mailing Address Information</legend>

              <p><b>Name:</b>
              <span class="resp-value">${data.givenName}
              <tal:x tal:condition="data.middleName">
                  ${data.middleName}
              </tal:x>
              ${data.sn}
              <tal:x tal:condition="data.suffix">
                  ${data.suffix}
              </tal:x>
              </span>
              </p>

              <p><b>Preferred name:</b> <span class="resp-value">${data.cn}</span></p>

              <h4>Mailing address:</h4>
              <address>
                <span class="resp-value">
                ${data.givenName}
                <tal:x tal:condition="data.middleName">
                    ${data.middleName}
                </tal:x>
                ${data.sn}
                <tal:x tal:condition="data.suffix">
                    ${data.suffix}
                </tal:x>
                <br />
                ${data.street} <br />
                ${data.lcity},
                ${data.st} ${data.postalCode} <br />
                ${data.country}
                </span>
              </address>
              <h4>Contact addrs:</h4>
              <address>
                email: <span class="resp-value">${data.mail}</span> <br />
                Phone: <span class="resp-value">${data.phone}</span><br />
                Cell phone: <span class="resp-value">${data.cell}</span><br />
              </address>



            </fieldset>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-6">

          <fieldset class="employ">
            <legend>Employment/Institution Information</legend>

            <div class="form-group" tal:define="field form['employerType'];">
              <h5>${field.title}<span
                  class="req" tal:condition="field.required">*</span></h5>
              <div class="resp-reported-value">
                <p class="resp-reported-value">${structure:field.serialize()}</p>
              </div>

            </div>

            <div class="form-group" tal:define="field form['employerName'];">
              <h5>${field.title}</h5>
              <p class="resp-reported-value">${structure:field.serialize()}</p>
            </div>

          </fieldset>


          <fieldset class="citizen-data">
            <legend>Citizenship Status</legend>
            <div class="form-group" tal:define="field form['citizenStatus'];">
              <h5>${field.title}</h5>
              <div class="resp-reported-value">
                  ${structure:field.serialize()}
              </div>
            </div>
            <div class="form-group" tal:define="field form['birthCountry'];">
              <h5>${field.title}</h5>
              <div class="resp-reported-value">
                  ${structure:field.serialize()}
              </div>
            </div>
          </fieldset>
          </div>

        </div>

        <div class="row">
          <div class="col-md-12">

          <fieldset id="existing-account-edit">
            <legend>UserID Info</legend>

            <div class="form-group"
                tal:condition="data.nrelUserID">
              <p><b>nrelUserID</b>
                <span class="resp-reported-value">${data.nrelUSerID}</span></p>
            </div>

            <div class="form-group" tal:condition="data.preferredUID">
              <p><b>preferredUID:</b>
                <span class="resp-reported-value">${data.preferredUID}</span>
              </p>
            </div>

            <div class="form-group" tal:define="field form['justification'];" tal:condition="field">
              <h5>${field.title}</h5>
              <p class="resp-reported-value">${structure:field.serialize()}</p>
            </div>

          </fieldset>


          <fieldset id="user-comments">
            <div class="form-group" tal:define="field form['comments'];">
              <h5>${field.title}</h5>
              <p class="resp-reported-value">${structure:field.serialize()}</p>
            </div>

          </fieldset>


          <div class="row reg-form-submit-section">

            <hr/>

            <div class="col-md-5">
              <input class="btn btn-primary"
                     id="request_account_submit" name="submit" type="submit"
                     value="Update"/>
            </div>
            <div class="col-md-3">
              <a href="./" class="btn btn-default" role="button">Cancel</a>
            </div>
          </div>
        </div>
        </div>


        </form>



















    </div>
  </div>
</div>

