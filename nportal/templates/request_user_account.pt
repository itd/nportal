    <div class="container regform">
      <div class="row">

        <div class="col-xs-1 col-md-2">DEMO <br />  2015-10-07</div>

        <div class="col-xs-10 col-md-8">

          <h2>ESIF account registration request <i>- Mock-up</i></h2>
          <p>

          </p>


          <form action="${form.action}" method="POST" id="${form.form_id}" accept-charset="utf-8" class="deform">

            <fieldset class="reg policy">
              <div class="policyd">
              <legend>Policy Acceptance</legend>

              <p>You must agree to the following terms and conditions for your account application to be considered:</p>

              <div class="form-group" tal:define="field form['cou'];">
                 <p tal:condition="field.error" tal:repeat="error field.error.messages()">
                  ${error}
                </p>
                <label for="${field.name}">Acceptable Use Policy<span class="req" tal:condition="field.required">*</span></label>
                <p class="help-block">By submitting this application, I agree that I have read and will abide by the <a href="#">ESIF HPC Conditions of Use Policy</a>.</p>
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
                ${structure:field.serialize()}
              </div>

              <div class="form-group" tal:define="field form['stor'];">
                <label for="cou">Storage Policy<span class="req" tal:condition="field.required">*</span></label>
                <p class="help-block">By submitting this application, I agree that I have read and will abide by the <a href="#">ESIF HPC Storage Policies</a>.</p>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

              <div class="form-group" tal:define="field form['cyber'];">
                <label for="cou">Acceptable Use Policy<span class="req" tal:condition="field.required">*</span></label>
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
                <p class="help-block">By submitting this application, I agree that I have read and will abide by the <a href="#">ESIF HPC Cyber Security Policy</a>.</p>
                ${structure:field.serialize()}
              </div>
            </fieldset>


            <fieldset class="r-personal">
              <legend>Personal Information</legend>
              <p>You must use your legally recognized name information in the fields below.</p>

              <div class="form-group" tal:define="field form['titlePrefix'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

              <div class="row pnames">

                <div class="col-md-3">


                  <tal:def tal:define="field form['givenName'];">
                    <div class="form-group">
                      <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                      ${structure:field.serialize()}
                      <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
                    </div>
                  </tal:def>
                </div>

                <div class="col-md-3">
                  <div class="form-group" tal:define="field form['middleName'];">
                    <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                    ${structure:field.serialize()}
                    <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group" tal:define="field form['sn'];">
                    <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                    ${structure:field.serialize()}
                    <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
                  </div>
                </div>
              </div>

              <div class="form-group" tal:define="field form['suffix'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

              <div class="form-group" tal:define="field form['cn'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>


            </fieldset>


            <fieldset class="contact-info">
              <legend>Contact and Mailing Address Information</legend>

              <p>We will use this for contact purposes or if we need to mail anything to you.</p>
              <p><i><b>NOTE:</b> business/institution contact information is preferred.</i></p>

              <tal:def tal:define="field form['street'];">
                <div class="form-group">
                  <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                  ${structure:field.serialize()}
                  <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
                </div>
              </tal:def>

              <div class="row"><!--! start address block -->

                <div class="col-md-4">
                  <tal:def tal:define="field form['l'];">
                    <div class="form-group">
                      <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                      ${structure:field.serialize()}
                      <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
                    </div>
                  </tal:def>
                </div>

                <div class="col-md-4">
                  <tal:def tal:define="field form['postalCode'];">
                    <div class="form-group">
                      <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                      ${structure:field.serialize()}
                      <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
                    </div>
                  </tal:def>
                </div>

                <div class="col-md-4">
                  <tal:def tal:define="field form['country'];">
                    <div class="form-group">
                      <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                      ${structure:field.serialize()}
                      <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
                    </div>
                  </tal:def>
                </div>

              </div> <!--! end address block -->

              <p>Email and phone are used to contact you if necessary and/or for identification purposes.</p>

              <div class="form-group" tal:define="field form['mail'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

              <div class="form-group" tal:define="field form['mailPreferred'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                <span class="help" tal:condition="field.description">${field.description}</span>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

              <div class="form-group" tal:define="field form['phone'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>


              <div class="form-group" tal:define="field form['cell'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <span class="help" tal:condition="field.description">${field.description}</span>
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

            </fieldset>


            <fieldset class="employ">

              <legend>Employment/Institution Information</legend>

              <div class="form-group" tal:define="field form['employerType'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <span class="help" tal:condition="field.description">${field.description}</span>
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

              <div class="form-group" tal:define="field form['employerName'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                <span class="help" tal:condition="field.description">${field.description}</span>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

            </fieldset>


            <fieldset class="citizen-data">
              <legend>Citizenship Status</legend>
              <p>Please detail your citizenship status, domestic and foreign.</p>

              <div class="form-group" tal:define="field form['citizenStatus'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                <span class="help" tal:condition="field.description">${field.description}</span>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>
              <div class="form-group" tal:define="field form['citizenOf'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <span class="help" tal:condition="field.description">${field.description}</span>
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>
              <div class="form-group" tal:define="field form['birthCountry'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                <span class="help" tal:condition="field.description">${field.description}</span>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>
            </fieldset>


            <fieldset class="r-account">
              <legend>NREL/ESIF HPC Account Information</legend>

              <div class="form-group" tal:define="field form['nrelExistingAccount'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                <span class="help" tal:condition="field.description">${field.description}</span>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

              <div class="form-group" tal:define="field form['preferredUID'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                <span class="help" tal:condition="field.description">${field.description}</span>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

              <div class="form-group" tal:define="field form['justification'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                <span class="help" tal:condition="field.description">${field.description}</span>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

              <div class="form-group" tal:define="field form['comments'];">
                <label for="${field.name}">${field.title}<span class="req" tal:condition="field.required">*</span></label>
                <span class="help" tal:condition="field.description">${field.description}</span>
                ${structure:field.serialize()}
                <p tal:condition="field.error" tal:repeat="error field.error.messages()" class="alert alert-danger" role="alert">${error}</p>
              </div>

            </fieldset>


            <!-- btn-default -->
            <button class="radius btn button"
              id="request_account_submit" name="submit" type="submit"
              value="submit">Submit Registration Request</button>

            <a href="./" class="btn btn-info" role="button">Cancel</a>
          </form>




        </div>
        <div class="col-xs-1 col-md-2">
          <!--! right column -->
          <!--?<i class="fa fa-stethoscope">xx</i>-->
          <!--?<i class="fa fa-camera-retro fa-5x">xx</i> .col-xs-1 .col-md-2-->
        </div>

      </div>
      <!--! /row -->
    </div>





  </div>
</div>

