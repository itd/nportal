        <div class="col-xs-10 col-md-8">

          <h2>Registration Form Mock-up</h2>
          <p>

          </p>


          <form>

            <fieldset class="r-policy">
              <legend>Policy Acceptance</legend>
              <p>You must agree to the following terms and conditions for your account application to be considered:</p>
              <div class="form-group" tal:define="field form['cou'];">
                <label for="cou">Acceptable Use Policy<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <p class="help-block">By submitting this application, I agree that I have read and will abide by all current and future versions of the <a href="#">ESIF HPC Conditions of Use Policy</a>.</p>
              </div>

              <div class="form-group" tal:define="field form['stor'];">
                <label for="cou">Storage Policy<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <p class="help-block">By submitting this application, I agree that I have read and will abide by the <a href="#">ESIF HPC Storage Policies</a>.</p>
              </div>

              <div class="form-group" tal:define="field form['cyber'];">
                <label for="cou">Acceptable Use Policy<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
                <p class="help-block">By submitting this application, I agree that I have read and will abide by all current and future versions of the <a href="#">ESIF HPC Cyber Security Policy Documents</a>.</p>
              </div>


            </fieldset>


            <fieldset class="r-personal">
              <legend>Personel Information</legend>

              <div class="form-group" tal:define="field form['titlePrefix'];">
                <label for="titlePrefix">Title / Prefix: </label>
                ${structure:field.serialize()}
              </div>

              <div class="form-group" tal:define="field form['givenName'];">
                <label for="givenName">First or Given Name<span class="req" tal:condition="field.required">*</span></label>
                 ${structure:field.serialize()}
              </div>
              <div class="form-group" tal:define="field form['sn'];">
                <label for==${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>
              <div class="form-group" tal:define="field form['middleName'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>
              <div class="form-group" tal:define="field form['suffix'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>
              <div class="form-group" tal:define="field form['userTitle'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>
              <div class="form-group" tal:define="field form['cn'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>

              <div class="form-group" tal:define="field form['suffix'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>

            </fieldset>


            <fieldset class="contact-info">
              <legend>Contact and Mailing Address Information</legend>

              <p>We will use this for contact purposes or if we need to mail anything to you.</p>

              <div class="form-group" tal:define="field form['street'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>
              <div class="form-group" tal:define="field form['l'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>
              <div class="form-group" tal:define="field form['st'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>
              <div class="form-group" tal:define="field form['postalCode'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>
              <div class="form-group" tal:define="field form['country'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>

              <p>Email and phone are used to contact you if necessary and/or for identification purposes.</p>

              <div class="form-group" tal:define="field form['mail'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>

              <div class="form-group" tal:define="field form['phone'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>

              <div class="form-group" tal:define="field form['cell'];">
                <label for=${field}>${field.title}<span class="req" tal:condition="field.required">*</span></label>
                ${structure:field.serialize()}
              </div>


            </fieldset>

